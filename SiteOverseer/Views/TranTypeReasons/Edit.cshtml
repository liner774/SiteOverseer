@model SiteOverseer.Models.TranTypeReason

@{
    ViewData["Title"] = "Transaction Reason";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] Edit</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TranReasonId" />
                            <div class="form-group">
                                <label asp-for="TranReasonDesc" class="control-label"></label>
                                <input asp-for="TranReasonDesc" class="form-control" />
                                <span asp-validation-for="TranReasonDesc" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="RevDtetime" class="control-label"></label>
                                <input asp-for="RevDtetime" class="form-control" />
                                <span asp-validation-for="RevDtetime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
