@model SiteOverseer.Models.Menuaccess

@{
    ViewData["Title"] = "Menu Access";

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">
                    Are you sure you want to delete this?
                </h3>
            </div>
           
            <div class="card-body>
                 <div class="row">
                    <div class="col-md-12 ">
                        
                        <span class="form-control" asp-for="MnugrpId"  asp-items="@ViewBag.MenuGpList"></span>
                        <span asp-validation-for="AccessId" class="text-danger"></span>
                       
                        <dl class="row">
                            <dt class="col-sm-2" >
                                @Html.DisplayNameFor(model => model.AccessId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.AccessId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MnugrpId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MnugrpId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.BtnNme)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BtnNme)
                            </dd>

                        </dl>

                    </selection>
                </span>
            </div>
           
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="AccessId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</section>



