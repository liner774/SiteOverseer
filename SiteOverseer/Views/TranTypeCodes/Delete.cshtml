@model SiteOverseer.Models.TranTypeCode

@{
    ViewData["Title"] = "Transaction Code";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
