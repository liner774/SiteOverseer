                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RequireClaim)
                    </dd>

                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="TrantypId" />
