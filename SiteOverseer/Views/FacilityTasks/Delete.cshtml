@model SiteOverseer.Models.FacilityTask

@{
    ViewData["Title"] = "Facility Task";
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">
                    Are you sure you want to delete this?
                </h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FciltskId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FciltskId)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FcilNme)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FcilNme)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.WbsId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.WbsCde)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Budget)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Budget)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CntorNme)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CntorNme)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SelectionTyp)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SelectionTyp)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.WorkstartDte)
                    </dt>
                    <dd class="col-sm-10">
                        @Convert.ToDateTime(Model.WorkstartDte).ToString("dd MMM yyyy")
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.WorkendDte)
                    </dt>
                    <dd class="col-sm-10">
                        @Convert.ToDateTime(Model.WorkendDte).ToString("dd MMM yyyy")
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AwardedValue)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AwardedValue)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Currcde)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Currcde)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AllowSubmitExpense)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AllowSubmitExpense)
                    </dd>                   
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Remark)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Remark)
                    </dd>
                   
                </dl>
            </div>

            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="FcilId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</section>



