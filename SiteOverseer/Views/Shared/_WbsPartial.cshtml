@model IEnumerable<SiteOverseer.Models.Wbs>

@{
    ViewData["Title"] = "WBS Codes";
}
@section links {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lib/AdminLTE/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/AdminLTE/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/AdminLTE/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
   
}

@section Scripts {
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/jszip/jszip.min.js"></script>
    <script src="~/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/js/showTable.js"></script>

 
}

<style>
    th, td {
        overflow: hidden;
        white-space: nowrap;
    }

    .loading-text {
        display: none;
        color: black;
        font-size: 20px;
        text-align: center;
        margin-top: 20px;
    }
</style>

<!-- Package Items Modal -->
<div class="modal fade" id="tableModal" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">@ViewData["Title"] List <span id="spanId"></span><span id="hiddenId" hidden></span></h5>
                <button type="button" class="close" onclick="closePackageItemModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body table-responsive" style="max-height: 550px">
                <button class="btn btn-info m-1" style="background-color: #047cfb;color: white" onclick="addWBSCodes()">
                    New
                </button>
                <div id="tableLoadingScreen" class="loading-text">Loading...</div>
                <table id="packageItemsTable" class="table table-bordered table-hover">
                    <thead class="text-md-center">
                        <tr style="font-size: 12px">
                            <th style="text-align: left">
                                @Html.DisplayNameFor(model => model.WbsdCde)
                            </th>
                            <th ></th>
                        </tr>
                    </thead>
                    <tbody id="wbsCodesBodyId" class="text-md-left" style="font-size: 14px">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
               <button id="modelCloseBtnId" class="btn" onclick="saveWBSCodes()" style="background-color: #047cfb;color: white">Save</button>

            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="col-12">
        <div id="messageBox1" class="alert alert-info @((ViewBag.InfoMessage != null) ? "" : "d-none")" role="alert">
            @ViewBag.InfoMessage
        </div>
    </div>
    <div class="col-12">
        <div id="messageBox2" class="alert alert-danger @((ViewBag.WarningMessage != null) ? "" : "d-none")" role="alert">
            @ViewBag.WarningMessage
        </div>
    </div>
</div>
