@model SiteOverseer.Models.ProgressPayment

@{
    ViewData["Title"] = "Progress Payment";

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">
                    Are you sure you want to delete this?
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Currcde)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Currcde)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Currate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Currate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CmpyNme)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CmpyNme)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.UserNme)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UserNme)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RevdTetime)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RevdTetime)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Progpayid" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</section>



