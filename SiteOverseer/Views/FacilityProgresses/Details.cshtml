@model SiteOverseer.Models.FacilityProgress

@{
    ViewData["Title"] = "Facility Progress";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.popup-image').on('click', function () {
                var imgUrl = $(this).attr('src');
                $('#image-popup').attr('src', imgUrl);
                $('#imageModal').modal('show');
            });

            $('#closeModalBtn').on('click', function () {
                $('#imageModal').modal('hide');
            });
        });
    </script>
}

<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img id="image-popup" src="" alt="Popup Image" style="width: 100%; height: auto;">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeModalBtn">Close</button>
            </div>
        </div>
    </div>
</div>


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] Details </h3>
            </div>
            <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FcilTskId)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FcilTskId)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SubmitDte)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SubmitDte)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Longitude)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Longitude)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Latitude)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Latitude)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Company)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Company)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.User)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.RevDteTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RevDteTime)
                        </dd>
                        <dt class="col-sm-2">
                        Image(s)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.ImageData != null)
                        {
                            var base64 = Convert.ToBase64String(Model.ImageData);
                            var imgSrc = $"data:{Model.ImageContentType};base64,{base64}";
                            <div style="border: 3px solid #adb5bd;border-radius:10px; padding: 5px; max-width: 200px; max-height: 200px; overflow: hidden;">
                                <img src="@imgSrc" alt="@Model.ImageName" style="width: 100%; height: 100%; object-fit: cover;" class="popup-image" />
                            </div>
                        }
                        else
                        {
                            <span>No image(s) available.</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</section>
